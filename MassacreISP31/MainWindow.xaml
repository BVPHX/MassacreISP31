<Window x:Class="MassacreISP31.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MassacreISP31"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" ResizeMode="CanMinimize">
    <Window.Background>
        <ImageBrush ImageSource="/1232345.jpg"/>
    </Window.Background>
    <Grid>
        <ListBox x:Name="victimList" HorizontalAlignment="Center"  Height="307" VerticalAlignment="Center" Width="230" d:ItemsSource="{d:SampleData ItemCount=5}">
            <ListBox.Background>
                <ImageBrush ImageSource="/52345634.jpg"/>
            </ListBox.Background>
            <ListBoxItem Content="Шестаков" Background="AntiqueWhite" BorderThickness="2"></ListBoxItem>
            <ListBoxItem Content="Cеливанов" Background="AntiqueWhite"></ListBoxItem>
            <ListBoxItem Content="Обухов"></ListBoxItem>
            <ListBoxItem Content="Назаров"></ListBoxItem>
            <ListBoxItem Content="Косоуров"></ListBoxItem>
        </ListBox>

    </Grid>
</Window>
